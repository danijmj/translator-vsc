{
    "name": "translator",
    "displayName": "translator",
    "description": "translate for Korean",
    "version": "1.0.0",
    "publisher": "sculove",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "translator",
        "translation",
        "translate",
        "korean"
    ],
    "icon": "images/translator.png",
    "bugs": {
        "url": "https://github.com/sculove/translator/issues",
        "email": "sculove@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sculove/translator.git"
    },
    "homepage": "https://github.com/sculove/translator/blob/master/README.md",
    "activationEvents": [
        "onCommand:extension.translateForKorean"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "title": "translator",
                "properties": {
                    "translator.type": {
                        "type": "string",
                        "enum": [
                            "naver"
                        ],
                        "default": "naver",
                        "description": "사용할 번역 API 를 등록해주세요 (naver)"
                    },
                    "translator.naver": {
                        "type": "object | null",
                        "default": {
                            "clientId": null,
                            "clientSecret": null
                        },
                        "properties": {
                            "clientId": {
                                "type": "string",
                                "default": null,
                                "description": "네이버 오픈 API 클라이언트 Id를 등록해 주세요"
                            },
                            "clientSecret": {
                                "type": "string",
                                "default": null,
                                "description": "네이버 오픈 API 클라이언트 Secret을 등록해 주세요"
                            }
                        }
                    },
                    "translator.rules": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "prefix": {
                                    "type": "string",
                                    "description": "prefix로 사용할 이름"
                                },
                                "description": {
                                    "type": "string",
                                    "defalut": "",
                                    "description": "prefix의 설명"
                                },
                                "antonymPrefix": {
                                    "type": "string",
                                    "defalut": null,
                                    "description": "반대 prefix"
                                }
                            }
                        },
                        "default": [
                            {
                                "prefix": "get",
                                "description": "반환한다.",
                                "antonymPrefix": "set"
                            },
                            {
                                "prefix": "set",
                                "description": "설정한다.",
                                "antonymPrefix": "get"
                            },
                            {
                                "prefix": "update",
                                "description": "바꾸다.",
                                "detail": "최신으로 바꾼다"
                            },
                            {
                                "prefix": "change",
                                "description": "바꾸다, 변하다.",
                                "detail": "어떤 것을 다른 것으로 바꾸거나, 성질·성격을 근본적으로 변화시킨다."
                            },
                            {
                                "prefix": "alter",
                                "description": "바꾸다, 고치다, 수정하다.",
                                "detail": "근본적인 변화가 아니라, 모양이나 세부사항을 바꾼다."
                            },
                            {
                                "prefix": "modify",
                                "description": "바꾸다, 수정하다.",
                                "detail": "어떤 것에 맞추어서 바꾼다."
                            },
                            {
                                "prefix": "add",
                                "description": "첨가하다, 덧붙이다."
                            },
                            {
                                "prefix": "insert",
                                "description": "끼워 넣다.",
                                "detail": "다른 것 속에, 둘 사이에 끼워 넣다."
                            },
                            {
                                "prefix": "remove",
                                "description": "제거한다",
                                "detail": "원래 위치에서는 없어지지만 어딘가 남아있다."
                            },
                            {
                                "prefix": "delete",
                                "description": "삭제한다.",
                                "detail": "완전히 없어진다."
                            },
                            {
                                "prefix": "is",
                                "description": "예/아니오. boolean 타입"
                            },
                            {
                                "prefix": "has",
                                "description": "있다/없다. boolean 타입"
                            },
                            {
                                "prefix": "create",
                                "description": "생성한다",
                                "detail": "기존에 없던 것을 창조한다.",
                                "antonymPrefix": "destroy"
                            },
                            {
                                "prefix": "make",
                                "description": "생성한다 ",
                                "detail": "기존에 있던 것에서 부가 자료를 생성한다."
                            },
                            {
                                "prefix": "destroy",
                                "description": "파괴한다. 자원을 해제한다.",
                                "antonymPrefix": "create"
                            }
                        ]
                    }
                }
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.translateForKorean",
                    "when": "editorHasSelection",
                    "group": "transtor"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.translateForKorean",
                "title": "Translator",
                "when": "editorHasSelection"
            }
        ],
        "keybindings": [
            {
                "command": "extension.translateForKorean",
                "key": "ctrl+alt+t",
                "mac": "cmd+alt+t",
                "when": "editorHasSelection"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.45",
        "@types/node": "^8.5.2",
        "typescript": "^2.6.2",
        "vscode": "^1.1.10"
    },
    "dependencies": {
        "isomorphic-fetch": "^2.2.1",
        "josa": "^3.0.1",
        "rxjs": "^5.5.6"
    }
}
